<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Jarvis</title>

	<style type="text/css">
		body 
      {			
         background-color: black; 
         color: white;
		}
	</style>
   <script>
     function enableGo()
     {
       var x = document.getElementById("file");

       if (x.value != "")
       {
         document.getElementById("submit").disabled = false;
       }
       else
       {
         document.getElementById("submit").disabled = true;
       }
     }
  </script>
</head>
<body>
	<img src="@Path['~/Content/gradingLogo.png']" alt="Jarvis logo" /><br />	   
  <div style="position: absolute; top:0; right:0;">
    <a href="/help">
      <img src="@Path['~/Content/gradingHelp.png']" alt="Help" />
    </a>
  </div>
  <form method='post' action='runForRecord' enctype='multipart/form-data'>      
      File: <input type='file' name='file' id='file' onchange="enableGo();" />
      <input type='submit' id='submit' value='Go!' disabled/>
  </form>
  <p>
    @Model
  </p>
</body>
</html>
